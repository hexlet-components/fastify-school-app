extends ../layouts/index.pug

block content
  div.row.mt-5.p-5.shadow.bg-white
    div.col-12.col-md-4.px-3.order-1.order-md-2.mb-3.mb-md-0
      div.d-flex.flex-wrap.mb-3
        span.text-muted.me-2 Название
        span= course.title
      div.d-flex.flex-wrap.mb-3
        span.text-muted.me-2 Описание
        span= course.description
      div.d-flex.flex-wrap
        a.btn.btn-primary.me-1(href=route('editCourse', { id: course.id })) Редактировать
        form(action=`${route('course', { id: course.id })}?_method=DELETE`, method="post")
          input(type='submit', value="Удалить", class="btn btn-danger")
