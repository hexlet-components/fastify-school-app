extends ../layouts/index.pug

block content
  .row.justify-content-center
    .col-12.col-md-8
      .card.shadow-sm
        .card-body.row.p-5
          .col-12.col-md-6.mt-3.mt-mb-0
            form(action=`${route('course', { id: course.id })}?_method=PATCH` method='post')
              .form-floating.mb-3
                input.form-control(id= "title" name= "title" value= course.title)
                label(for= "title") Название

              .mb-3
                label(for= "description") Описание
                textarea.form-control(id= "description" name= "description")= course.description

              input(class='btn btn-primary' type='submit' value= 'Сохранить')
